{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "outDir": "dist-electron",
    "target": "ES2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": [
    "src/electron/**/*",
    "src/lib/**/*",
    "dict.json"
  ]
}